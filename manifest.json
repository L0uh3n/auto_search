{
    "name": "AutoSearch",
    "description": "Extensão criada com o intuito de me auxiliar a conseguir os pontos diários no rewards que são ganhos pesquisando através do Bing.",
    "version": "1.3",
    "manifest_version": 3,
    "content_scripts": [
        {
          "matches": ["*://www.bing.com/search*"],
          "js": ["content.js"]
        }
    ],
    "permissions": ["tabs", "storage"],
    "action": {
        "default_icon": "imgs/icon.png",
        "default_title": "AutoSearch",
        "default_popup": "popup/popup.html"
    }
}